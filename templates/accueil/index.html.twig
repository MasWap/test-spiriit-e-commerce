{% extends 'base.html.twig' %}

{% block title %}Accueil - LAYRAC Guitar Shop{% endblock %}

{% block body %}
<div class="hero-section bg-gradient text-dark py-5 mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold text-white mb-4">
                    Guitares de Légendes
                </h1>
                <p class="lead text-white mb-4">
                    Découvrez notre collection exclusive de guitares signatures des plus grands artistes du rock et du metal.
                </p>
                <a href="#produits" class="btn btn-light btn-lg">
                    <i class="fas fa-guitar me-2"></i>Découvrir nos guitares
                </a>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-guitar text-white" style="font-size: 8rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</div>

<div class="container" id="produits">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h2 class="display-5 fw-bold mb-2">Notre Collection</h2>
            <p class="lead"><strong>{{ produits|length }}</strong> guitares signatures disponibles</p>
        </div>
    </div>
    
    <div class="row g-4">
        {% for produit in produits %}
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                    <i class="fas fa-guitar text-secondary" style="font-size: 4rem;"></i>
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ produit.nom }}</h5>
                    <p class="card-text text-muted flex-grow-1">
                        {{ produit.description }}
                    </p>
                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        <div class="price">
                            <span class="h4 text-primary fw-bold">{{ produit.prix|number_format(2, ',', ' ') }} €</span>
                        </div>
                        <div class="btn-group">
                            <button class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye"></i>
                            </button>
                            <button class="btn btn-primary btn-sm">
                                <i class="fas fa-cart-plus me-1"></i>Ajouter
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <small class="text-muted">
                        <i class="fas fa-truck me-1"></i>Livraison gratuite
                    </small>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    
    {% if produits is empty %}
    <div class="row">
        <div class="col-12 text-center py-5">
            <i class="fas fa-guitar text-muted" style="font-size: 4rem;"></i>
            <h3 class="mt-3 text-muted">Aucune guitare disponible</h3>
            <p class="text-muted">Revenez bientôt pour découvrir notre collection !</p>
        </div>
    </div>
    {% endif %}
</div>

<style>
.hover-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}

.hover-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
}

.btn-group .btn {
    border-radius: 0.375rem;
}

.btn-group .btn:not(:last-child) {
    margin-right: 0.25rem;
}
</style>
{% endblock %}
