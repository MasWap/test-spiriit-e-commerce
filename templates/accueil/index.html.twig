{% extends 'base.html.twig' %}

{% block title %}{{ 'site.title'|trans }}{% endblock %}

{% block body %}
<div class="hero-section bg-gradient text-dark py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold text-white mb-4">
                    {{ 'site.tagline'|trans }}
                </h1>
                <p class="lead text-white mb-4">
                    {{ 'site.description'|trans }}
                </p>
                <a href="#produits" class="btn btn-light btn-lg">
                    <i class="fas fa-guitar me-2"></i>{{ 'nav.discover'|trans }}
                </a>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-guitar text-white hero-guitar-icon"></i>
            </div>
        </div>
    </div>
</div>

<div class="container" id="produits">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h2 class="display-5 fw-bold mb-2">{{ 'home.collection_title'|trans }}</h2>
            <p class="lead"><strong>{{ produits|length }}</strong> {{ 'home.collection_count'|trans }}</p>
        </div>
    </div>
    
    <div class="row g-4">
        {% for produit in produits %}
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-img-top bg-light d-flex align-items-center justify-content-center product-card-image">
                    {% if produit.photo %}
                        <img src="{{ '/images/products/' ~ produit.photo }}" alt="{{ produit.nom }}" class="img-fluid rounded" style="max-height: 200px; object-fit: cover;">
                    {% else %}
                        <i class="fas fa-guitar text-muted" style="font-size: 4rem;"></i>
                    {% endif %}
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ produit.nom }}</h5>
                    <p class="card-text text-muted flex-grow-1">
                        {{ produit.description }}
                    </p>
                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        <div class="price">
                            <span class="h4 text-primary fw-bold">{{ produit.prix|number_format(2, ',', ' ') }} â‚¬</span>
                        </div>
                        <div class="btn-group">
                            <a href="{{ path('app_produit_show', {slug: produit.slug}) }}" class="btn btn-outline-primary btn-sm">
                                {{ 'product.see_details'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    
    {% if produits is empty %}
    <div class="row">
        <div class="col-12 text-center py-5">
            <i class="fas fa-guitar text-muted empty-state-icon"></i>
            <h3 class="mt-3 text-muted">{{ 'home.empty_state'|trans }}</h3>
            <p class="text-muted">{{ 'home.empty_message'|trans }}</p>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
